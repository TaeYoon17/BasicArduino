#ifndef ERU_SWITCH_H_
#define ERU_SWITCH_H_


/*********************************************************************************************************************/
/*-----------------------------------------------------Includes------------------------------------------------------*/
/*********************************************************************************************************************/
#include "Ifx_Types.h"
#include "IfxCpu.h"
#include "IfxScuWdt.h"

#include "IfxPort.h"
#include "IfxPort_PinMap.h"
/*********************************************************************************************************************/
/*------------------------------------------------------Macros-------------------------------------------------------*/
/*********************************************************************************************************************/
// In21 -> OGU0 / IN32 -> OGU1
// External Input Selection
#define EICR_EXIS0 4
#define EICR_EXIS1 20

#define EICR_INP0 12
#define EICR_INP1 28

#define EICR_FEN0 8
#define EICR_FEN1 24

#define EICR_EIEN0 11
#define EICR_EIEN1 27

#define IGCR_IGP0 14
#define IGCR_IGP1 30

#define SRC_TOS 11
#define SRC_SRE 10

/*********************************************************************************************************************/
/*-------------------------------------------------Global variables--------------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*-------------------------------------------------Data Structures---------------------------------------------------*/
/*********************************************************************************************************************/
 
/*********************************************************************************************************************/
/*--------------------------------------------Private Variables/Constants--------------------------------------------*/
/*********************************************************************************************************************/

/*********************************************************************************************************************/
/*------------------------------------------------Function Prototypes------------------------------------------------*/
/*********************************************************************************************************************/
void init_Switch1(unsigned int prior){
    SCU_EICR1.U &= ~(0x7 << EICR_EXIS0);
    SCU_EICR1.U |= (0x1 << EICR_EXIS0);

    SCU_EICR1.U |= (0x1 << EICR_EIEN0);
    SCU_EICR1.U |= (0x1 << EICR_FEN0);

    SCU_EICR1.U &= ~(0x7 << EICR_INP0);

    SCU_IGCR0.U &= ~(0x3 <<IGCR_IGP0);
    SCU_IGCR0.U |= (0x1 <<IGCR_IGP0);

    SRC_SCU_SCU_ERU0.U &= ~0xFF;
    SRC_SCU_SCU_ERU0.U |= prior;
    SRC_SCU_SCU_ERU0.U |= (0x1 << 10);
    SRC_SCU_SCU_ERU0.U &= ~(0x3 << 11);
}
void init_Switch2(void);

#endif /* ERU_SWITCH_H_ */
